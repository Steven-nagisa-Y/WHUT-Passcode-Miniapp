Page {
  --header-height: 190rpx;
  --qrcode-width: 280rpx;
  --qrcode-margin: 1.5rem;
  --color-green: #4cbc4c;
  --color-grey: #dcdcdc;
  --color-gold: #efcc5c;
  --color-yellow: #fceb64;
  --color-darkgrey: #5f5f5f;
}

.logo-header {
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -9999;
}

.content-header {
  height: var(--header-height);
  width: calc(100% - 60rpx);
  margin: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.content-header .avatar {
  height: var(--header-height);
  width: calc(var(--header-height) * 0.75);
}

.content-header .info {
  display: flex;
  flex: 1;
  flex-direction: column;
  margin-left: 1rem;
  align-items: flex-start;
  justify-content: left;
  color: white;
  font-size: 0.9rem;
}

.content-header .info-item {
  line-height: 1.5rem;
  height: 1.5rem;
}

.info-item .tag {
  width: 3rem;
  display: inline-block;
  text-align: justify;
  text-align-last: justify;
}

.content {
  height: 100%;
  width: calc(100% - 60rpx);
  margin: 0 30rpx;
}

.content .qr-content {
  height: 50%;
  border-radius: 4px;
  background-color: white;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.content .grey {
  background-color: var(--color-grey);
}

.qr-content .timer {
  height: 1.1rem;
  font-weight: bold;
  font-family: "Outfit", sans-serif;
  margin-top: 1rem;
}

.qrcode {
  width: var(--qrcode-width);
  height: var(--qrcode-width);
  padding: 6px;
  border: 8px double var(--color-gold);
  margin: var(--qrcode-margin) auto;
}

.qr-status {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  border-top: 1px solid #efefef;
}

.qr-status .status-ok {
  display: inline-block;
  font-size: 1.2rem;
  color: var(--color-green);
  font-weight: bold;
}

.qr-status .status-forbid {
  display: inline-block;
  font-size: 1.2rem;
  color: black;
  font-weight: bold;
}

.qr-status .line {
  margin: 0.25rem;
}

.qr-status .status {
  margin-top: 0.5rem;
}

.qr-status .info {
  width: 90%;
  color: var(--color-darkgrey);
  margin-bottom: 1rem;
  text-align: center;
  font-size: 0.9rem;
}

.more-content {
  width: 100%;
  height: var(--header-height);
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.more-content .more-item {
  border-radius: 4px;
  background-color: white;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
